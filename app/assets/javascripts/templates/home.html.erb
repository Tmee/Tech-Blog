<div class="row">
  <div class="large-12 columns">
    <div id="slider">
      <img src="http://placehold.it/1000x400&text=[ img 1 ]"/>
    </div><hr/>
  </div>
</div>

<div class="row text-center" ng-controller="ArticlesController">
  <div ng-repeat="article in articles | limitTo:3">
    <div class="large-4 columns">
      <span>{{article.title}}</span>
      <p>{{article.description}}</p>
    </div>
  </div>
</div>

<div class="row">
  <div class="panel">
    <h4>Get in touch!</h4>
    <div class="row">
      <div class="large-9 columns">
        <p>I'd love to hear from you, maybe hire me?</p>
      </div>
      <div class="large-3 columns">
        <a href="#" class="radius button right">Contact me</a>
      </div>
    </div>
  </div>
</div>
